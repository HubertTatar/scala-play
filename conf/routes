# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Login.getLogin
POST    /login                      controllers.Login.postLogin
GET		/betterlogin				controllers.LoginBetter.getLogin
POST	/betterlogin				controllers.LoginBetter.betterLogin

GET     /index                      controllers.Application.index

GET		/employees					controllers.EmployeesCtrl.employees
GET		/employee					controllers.EmployeesCtrl.byId(id: Int)
GET		/employeeCreate				controllers.EmployeesCtrl.getCreateEmployee
POST	/employeeCreate				controllers.EmployeesCtrl.createEmployee

GET		/userList					controllers.UserCtrl.users
GET		/newUser					controllers.UserCtrl.newUser
POST	/addNewUser					controllers.UserCtrl.addNewUser

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
